@model IEnumerable<PhoneBook.Models.Contact>

@{ ViewData["Title"] = "Sellers";
    ViewData["NewContact"] = "Click here!";
    ViewData["Phrase"] = "You want create a new contact?";
}

<h2>@ViewData["Title"]</h2>


<p>
    <h3>@ViewData["Phrase"]</h3>
    <a asp-action="Create"><h3>@ViewData["NewContact"]</h3></a>

</p>


<table class="table table-light">
    <thead>
        <tr class="bg-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit">@Html.DisplayFor(model => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(model => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Number)
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger">Delete contact</a>
                </td>
            </tr>
        }
    </tbody>
</table>